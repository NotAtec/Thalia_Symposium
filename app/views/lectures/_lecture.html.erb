<div id="<%= dom_id lecture %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= lecture.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Abstract:</strong>
    <%= lecture.abstract %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Speaker:</strong>
    <%= lecture.speaker_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Slots:</strong>
    <%= lecture.slots %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Location:</strong>
    <%= lecture.location %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this lecture", lecture, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
