<div id="modal-container" data-controller="turbo-modal" data-action="keyup@window->turbo-modal#closeWithKeyboard">
  <div id="actual-modal" class="relative bg-white rounded-lg shadow dark:bg-gray-700" data-controller="turbo-modal" data-action="click@window->turbo-modal#closeBackground">
    <!-- Modal header -->
    <div class="flex items-start justify-between p-4 border-b rounded-t dark:border-gray-600">
      <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
        <%= lecture.title %>
      </h3>
      <%= button_tag "", type: "button", data: { controller: "turbo-modal", action: "turbo-modal#hideModal" }, class: "text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-600 dark:hover:text-white" do %>
        <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
        <span class="sr-only">Close modal</span>
      <% end %>
    </button>
  </div>
  <!-- Modal body -->
  <div class="p-6 space-y-6">
    <% if lecture.title == "Speeddates with companies" %>
      <p class="text-base leading-relaxed text-gray-500 dark:text-gray-400">
        This talks speaker is: <%= lecture.speaker.name %>
      </p>
    <% end %>
    <p class="text-base leading-relaxed text-gray-500 dark:text-gray-400">
      <%= lecture.abstract %>
    </p>
  </div>
  <!-- Modal footer -->
  <div class="flex items-center p-6 space-x-2 border-t border-gray-200 rounded-b dark:border-gray-600">
    <% if !lecture.max.zero? %>
      <% if user_signed_in? %>
        <% if lecture.registered_by(current_user.id) %>
          <%= button_to "Unregister", slot_path(lecture.userRegistration(current_user.id)), method: :delete, class: "text-white bg-[#cc3333cc] hover:bg-[#cc3333ff] rounded-lg text-sm font-medium px-5 py-2.5"%>
        <% else %>
          <%= button_to "Register",  slots_path, params: {id: lecture.id }, class: "text-white bg-[#0FAEEECC] hover:bg-[#0FAEEEFF] rounded-lg text-sm font-medium px-5 py-2.5"%>
        <% end %>
      <% end %>
      <div class="bg-gray-100 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 text-black"><%= lecture.current_count %> / <%= lecture.max %></div>
    <% end %>
    <button type="button" data-controller="turbo-modal" data-action="turbo-modal#hideModal" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600">Close</button>
  </div>
</div>
</div>
