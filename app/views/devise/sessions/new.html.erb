<div class="container mx-auto w-full my-16 bg-white py-16 px-8 md:px-16 rounded-2xl drop-shadow-2xl z-0">
  <h1 class="text-5xl font-bold text-center">
    Sign In
  </h1>
  <br>
  <div class="text-lg text-center w-full">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email, class: "mb-2 text-sm font-medium text-gray-900" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 p-2.5" %>
      </div>
      <div class="field">
        <%= f.label :password, class: "mb-2 text-sm font-medium text-gray-900" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 p-2.5" %>
      </div>
      <br>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "mb-2 text-sm font-medium text-gray-900" %>
        </div>
      <% end %>
      <br>
      <div class="actions">
        <%= f.submit "Log in", class: "bg-[#E82F90CC] hover:bg-[#E82F90FF] rounded-full font-medium px-8 py-3 text-white" %>
      </div>
    <% end %>
    <br>
    <p class="text-sm font-light text-gray-500">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-medium text-primary-600 hover:underline " %>
    </p>
    <p class="text-sm font-light text-gray-500">
      <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "font-medium text-primary-600 hover:underline " %>
    </p>
  </div>
