<div id="<%= dom_id talk %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= talk.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Body:</strong>
    <%= talk.body %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Slots:</strong>
    <%= talk.slots %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Hall:</strong>
    <%= talk.hall %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Speaker:</strong>
    <%= talk.speaker_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this talk", talk, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
