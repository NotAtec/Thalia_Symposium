<div id="<%= dom_id speaker %>" class="speaker flex bg-white rounded-2xl odd:mr-[20%] even:ml-[20%] drop-shadow-lg w-100%">
  <div class="w-[100%] p-8">
    <h2 class="text-3xl font-black"><%= speaker.name %></h2>
    <p><%= speaker.body %></p>
  </div>

  <% #if action_name != "show" %>
    <% #link_to "Show this speaker", speaker, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <% # link_to 'Edit this speaker', edit_speaker_path(speaker), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
  <% #end %>

  <style>
      .speaker {
          background-image: url("https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fmedia-exp1.licdn.com%2Fdms%2Fimage%2FC4E03AQF-WW1Lc14s-Q%2Fprofile-displayphoto-shrink_800_800%2F0%2F1573568929337%3Fe%3D2147483647%26v%3Dbeta%26t%3DLJDnXBSn3IoJxfpbo7cNKKk3Kv5r1bjdKR7cfK6g7fk&f=1&nofb=1&ipt=e34d01fd3883ddec4ce1e5674a1dc665511cc2d0f21d81947da7633e9c8d10a8&ipo=images");
          background-size: 25%;
          background-repeat: no-repeat;
          aspect-ratio: 4 / 1;
      }

      .speaker:nth-child(odd) {
          padding-left: 20%;
          background-position: left;
      }

      .speaker:nth-child(even) {
          padding-right: 20%;
          background-position: right;
      }
  </style>
</div>